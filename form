    <div class="container">
        <div class="logo">
            <i class="fas fa-user-plus"></i>
        </div>
        
        <h1>ایجاد حساب کاربری</h1>
        <p class="subtitle">لطفاً اطلاعات خود را با دقت وارد کنید</p>
        

        
        <form id="registerForm" action="process_register.php" method="POST">
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label for="firstName" class="required">نام</label>
                        <input type="text" id="firstName" name="f_name" 
                               placeholder="نام خود را وارد کنید" required>
                        <div class="validation-message" id="firstNameMessage"></div>
                    </div>
                </div>
                
                <div class="col">
                    <div class="form-group">
                        <label for="lastName" class="required">نام خانوادگی</label>
                        <input type="text" id="lastName" name="l_name" 
                               placeholder="نام خانوادگی خود را وارد کنید" required>
                        <div class="validation-message" id="lastNameMessage"></div>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label for="fatherName" class="required">نام پدر</label>
                        <input type="text" id="fatherName" name="fa_name" 
                               placeholder="نام پدر خود را وارد کنید" required>
                        <div class="validation-message" id="fatherNameMessage"></div>
                    </div>
                </div>
                
                <div class="col">
                    <div class="form-group">
                        <label for="nationalCode" class="required">کد ملی</label>
                        <input type="tel" id="nationalCode" name="n_code" 
                               maxlength="10" pattern="\d{10}"
                               placeholder="۱۰ رقم کد ملی" required>
                        <div class="validation-message" id="nationalCodeMessage"></div>
                    </div>
                </div>
            </div>
            
            <div class="form-group">
                <label for="username" class="required">نام کاربری</label>
                <input type="text" id="username" name="username" 
                       placeholder="نام کاربری دلخواه" required minlength="4">
                <div class="validation-message" id="usernameMessage"></div>
            </div>
            
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label for="password" class="required">رمز عبور</label>
                        <input type="password" id="password" name="pas" 
                               placeholder="رمز عبور" required minlength="6">
                        <div class="password-strength">
                            <div class="strength-bar" id="passwordStrength"></div>
                        </div>
                        <div class="validation-message" id="passwordMessage"></div>
                    </div>
                </div>
                
                <div class="col">
                    <div class="form-group">
                        <label for="confirmPassword" class="required">تکرار رمز عبور</label>
                        <input type="password" id="confirmPassword" name="confirm_pas" 
                               placeholder="تکرار رمز عبور" required minlength="6">
                        <div class="validation-message" id="confirmPasswordMessage"></div>
                    </div>
                </div>
            </div>
            
            <!-- بخش کوکی برای ذخیره پسورد -->
            <div class="cookie-section" id="cookieSection">
                <div class="cookie-header">
                    <i class="fas fa-cookie-bite"></i>
                    <span>ذخیره رمز عبور</span>
                </div>
                <p class="cookie-text">
                    آیا می‌خواهید رمز عبور شما در این دستگاه ذخیره شود؟ این کار باعث می‌شود در دفعات بعدی سریع‌تر وارد شوید.
                </p>
                <div class="cookie-options">
                    <button type="button" class="cookie-btn accept" id="savePassword">بله، ذخیره شود</button>
                    <button type="button" class="cookie-btn reject" id="dontSave">خیر، ذخیره نشود</button>
                </div>
            </div>
            
            <!-- پیام‌های خطا و موفقیت -->
            <div class="message error" id="errorMessage">
                <i class="fas fa-exclamation-circle"></i>
                <span id="errorText"></span>
            </div>
            
            <!-- فیلد مخفی برای کوکی -->
            <input type="hidden" id="savePasswordChoice" name="save_password" value="no">
            
            <!-- دکمه‌های فرم -->
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-user-plus"></i>
                    ثبت نام
                </button>
                <button type="reset" class="btn btn-secondary">
                    <i class="fas fa-redo"></i>
                    پاک کردن
                </button>
            </div>
            
            <div class="form-footer">
                حساب دارید؟ <a href="login.php">وارد شوید</a>
            </div>
        </form>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('registerForm');
            const cookieSection = document.getElementById('cookieSection');
            const savePasswordBtn = document.getElementById('savePassword');
            const dontSaveBtn = document.getElementById('dontSave');
            const savePasswordChoiceInput = document.getElementById('savePasswordChoice');
            const errorMessage = document.getElementById('errorMessage');
            const errorText = document.getElementById('errorText');
            const passwordStrength = document.getElementById('passwordStrength');
            
            let cookieChoiceMade = false;
            
            // تابع ذخیره کوکی
            function setCookie(name, value, days) {
                const date = new Date();
                date.setTime(date.getTime() + (days * 24 * 60 * 60 * 1000));
                const expires = "expires=" + date.toUTCString();
                document.cookie = name + "=" + encodeURIComponent(value) + ";" + expires + ";path=/";
                console.log(`Cookie set: ${name}=${value}`);
            }
            
            // تابع دریافت کوکی
            function getCookie(name) {
                const nameEQ = name + "=";
                const ca = document.cookie.split(';');
                for(let i = 0; i < ca.length; i++) {
                    let c = ca[i].trim();
                    if (c.indexOf(nameEQ) === 0) {
                        return decodeURIComponent(c.substring(nameEQ.length));
                    }
                }
                return null;
            }
            
            // اعتبارسنجی فیلدها
            function validateField(field) {
                const value = field.value.trim();
                const fieldId = field.id;
                const messageElement = document.getElementById(fieldId + 'Message');
                
                messageElement.textContent = '';
                messageElement.className = 'validation-message';
                
                if (field.hasAttribute('required') && value === '') {
                    showValidation(messageElement, 'این فیلد الزامی است', false);
                    return false;
                }
                
                // اعتبارسنجی اختصاصی هر فیلد
                switch(fieldId) {
                    case 'nationalCode':
                        if (!/^\d{10}$/.test(value)) {
                            showValidation(messageElement, 'کد ملی باید ۱۰ رقم باشد', false);
                            return false;
                        }
                        break;
                        
                    case 'password':
                        if (value.length < 6) {
                            showValidation(messageElement, 'رمز عبور باید حداقل ۶ کاراکتر باشد', false);
                            return false;
                        }
                        updatePasswordStrength(value);
                        break;
                        
                    case 'confirmPassword':
                        const password = document.getElementById('password').value;
                        if (value !== password) {
                            showValidation(messageElement, 'رمز عبورها مطابقت ندارند', false);
                            return false;
                        }
                        break;
                        
                    case 'username':
                        if (value.length < 4) {
                            showValidation(messageElement, 'نام کاربری باید حداقل ۴ کاراکتر باشد', false);
                            return false;
                        }
                        break;
                }
                
                if (value !== '') {
                    showValidation(messageElement, '✓', true);
                }
                return true;
            }
            
            // نمایش پیام اعتبارسنجی
            function showValidation(element, message, isSuccess) {
                element.textContent = message;
                element.classList.add(isSuccess ? 'success' : 'error');
            }
            
            // بررسی قدرت رمز عبور
            function updatePasswordStrength(password) {
                let strength = 0;
                
                if (password.length >= 6) strength += 30;
                if (password.length >= 8) strength += 20;
                if (/[A-Z]/.test(password)) strength += 20;
                if (/[0-9]/.test(password)) strength += 20;
                if (/[^A-Za-z0-9]/.test(password)) strength += 10;
                
                passwordStrength.style.width = strength + '%';
                
                if (strength < 50) {
                    passwordStrength.style.backgroundColor = '#ff4757';
                } else if (strength < 80) {
                    passwordStrength.style.backgroundColor = '#ffa502';
                } else {
                    passwordStrength.style.backgroundColor = '#2ed573';
                }
            }
            
            // اعتبارسنجی هنگام تایپ
            document.querySelectorAll('input').forEach(input => {
                input.addEventListener('blur', function() {
                    validateField(this);
                    
                    if (this.id === 'password') {
                        validateField(document.getElementById('confirmPassword'));
                    }
                });
                
                input.addEventListener('input', function() {
                    if (this.id === 'nationalCode') {
                        this.value = this.value.replace(/\D/g, '').slice(0, 10);
                    }
                    
                    if (this.id === 'password') {
                        updatePasswordStrength(this.value);
                        validateField(document.getElementById('confirmPassword'));
                    }
                });
            });
            
            // مدیریت انتخاب ذخیره رمز عبور
            savePasswordBtn.addEventListener('click', function() {
                savePasswordChoiceInput.value = 'yes';
                cookieChoiceMade = true;
                cookieSection.style.display = 'none';
                setCookie('password_save_choice', 'accepted', 30);
                console.log('User chose to save password');
            });
            
            dontSaveBtn.addEventListener('click', function() {
                savePasswordChoiceInput.value = 'no';
                cookieChoiceMade = true;
                cookieSection.style.display = 'none';
                setCookie('password_save_choice', 'rejected', 30);
                console.log('User chose NOT to save password');
            });
            
            // ارسال فرم
            form.addEventListener('submit', function(e) {
                // اعتبارسنجی همه فیلدها
                let isValid = true;
                const requiredInputs = form.querySelectorAll('input[required]');
                let firstInvalidField = null;
                
                requiredInputs.forEach(input => {
                    if (!validateField(input)) {
                        isValid = false;
                        if (!firstInvalidField) {
                            firstInvalidField = input;
                        }
                    }
                });
                
                // بررسی مطابقت رمز عبورها
                const password = document.getElementById('password').value;
                const confirmPassword = document.getElementById('confirmPassword').value;
                
                if (password !== confirmPassword) {
                    showValidation(
                        document.getElementById('confirmPasswordMessage'),
                        'رمز عبورها مطابقت ندارند',
                        false
                    );
                    isValid = false;
                    if (!firstInvalidField) {
                        firstInvalidField = document.getElementById('confirmPassword');
                    }
                }
                
                // بررسی انتخاب کوکی
                if (!cookieChoiceMade) {
                    const previousChoice = getCookie('password_save_choice');
                    if (!previousChoice) {
                        e.preventDefault();
                        errorText.textContent = 'لطفاً درباره ذخیره رمز عبور تصمیم بگیرید';
                        errorMessage.style.display = 'flex';
                        cookieSection.style.display = 'block';
                        cookieSection.scrollIntoView({ behavior: 'smooth' });
                        return;
                    } else {
                        if (previousChoice === 'accepted') {
                            savePasswordChoiceInput.value = 'yes';
                        } else {
                            savePasswordChoiceInput.value = 'no';
                        }
                    }
                }
                
                if (!isValid) {
                    e.preventDefault();
                    errorText.textContent = 'لطفاً خطاهای فرم را برطرف کنید';
                    errorMessage.style.display = 'flex';
                    if (firstInvalidField) {
                        firstInvalidField.focus();
                    }
                }
            });
            
            // بررسی اولیه کوکی
            const previousChoice = getCookie('password_save_choice');
            if (previousChoice === 'accepted' || previousChoice === 'rejected') {
                cookieSection.style.display = 'none';
                cookieChoiceMade = true;
                if (previousChoice === 'accepted') {
                    savePasswordChoiceInput.value = 'yes';
                } else {
                    savePasswordChoiceInput.value = 'no';
                }
            } else {
                cookieSection.style.display = 'block';
            }
        });
    </script>
</body>
</html>
